{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "paths": {
      "vue-tsx-support": ["../../.."],
      "vue-tsx-support/*": ["../../../*"]
    },
    "include": [
      "*.tsx"
    ]
  }
}
